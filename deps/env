export PREFIX=$(pwd)/deps/prefix
export PATH="$PREFIX/bin:$PATH"
export CPPFLAGS="-I$PREFIX/include"
export LDFLAGS="-L$PREFIX/lib"
export LD_LIBRARY_PATH="$PREFIX/lib:$PREFIX/lib64:$PREFIX/local/lib"
export PKG_CONFIG_PATH="$PREFIX/lib/pkgconfig:$PREFIX/lib64/pkgconfig:/usr/lib/x86_64-linux-gnu/pkgconfig:/usr/share/pkgconfig"
export LC_CTYPE=C
export LC_ALL=C